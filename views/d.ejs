<style>
    .loader {
        width: 50px;
        aspect-ratio: 1;
        border-radius: 50%;
        border: 8px solid #0000;
        border-right-color: #ffa50097;
        position: relative;
        animation: l24 1s infinite linear;

    }

    .loader:before,
    .loader:after {
        content: "";
        position: absolute;
        inset: -8px;
        border-radius: 50%;
        border: inherit;
        animation: inherit;
        animation-duration: 2s;
    }

    .loader:after {
        animation-duration: 4s;
    }

    @keyframes l24 {
        100% {
            transform: rotate(1turn)
        }
    }

    body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        margin: 0;
        padding: 0;
        overflow-x: hidden;

        text-decoration: none;

        box-sizing: border-box;
        font-size: 20px;
        background-color: #0b0f18;

    }


    h1 {
        text-align: center;
        font-size: 5vmax;
        color: white;

    }

    input {
        width: 60vw;
        padding: 13px;
        outline: none;
        border: none;
        font-size: 20px;
        border: 1px solid #0056b3;
        border-radius: 20px;
    }


    form button {
        padding: 13px;
        border-radius: 20px;
        background-color: #007BFF;
        color: white;
        border: none;
        width: 25vw;
        font-size: 20px;
        cursor: pointer;
        max-width: 200px;
    }

    form {
        margin-bottom: 20px;
    }

    .movies {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        flex-direction: row;
    }

    .movie-card {

        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding: 10px;
        width: calc(100vw/4);
        min-width: 300px;
        margin: auto;
        padding-top: 20px;
        text-align: start;
        background: #040609;
        border: 1px solid #007bff59;
        margin: 5px;
        border-radius: 10px;


    }

    .movie-card h2,
    p {
        font-weight: 400;
        font-size: 18px !important;
        width: 200px;

    }

    .movie-card h2,
    p {
        transform: translateX(5px);
    }

    @media only screen and (max-width:500px) {
        .movie-card {
            width: 80vw !important;
        }
    }

    a {
        text-decoration: none;
        color: rgb(255, 255, 255);
    }

    .movie-card p {
        font-size: 13px !important;

    }

    .movie-card img {

        height: auto;

    }

    .movie-card h2 {
        font-size: 18px;
        margin: 10px 0;
    }

    .movie-card p {
        font-size: 14px;
        margin: 5px 0;
    }

    .movie-card a {
        display: inline-block;
        padding: 8px 12px;
        margin-top: 10px;
        background: #007BFF;
        color: white;
        text-decoration: none;
        border-radius: 4px;
    }

    .movie-card a:hover {
        background: #0056b3;
    }

    .center {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        flex-wrap: wrap;
    }

    .onett {
        width: 100vw;
        height: 100vh;
        position: fixed;
        top: 0;
        display: none;
        z-index: 9999;
        background-color: #040609;
    }
</style>
<body>
    <div style="text-align: center;">
        <h1>Movie Search</h1>
        <p style="color: #fff; width: 100%;">Search, download, and watch your favorite movies online.</p>
    </div>

    <form id="movieForm">
        <div class="center">
            <input type="text" name="name" id="movieName" placeholder="Enter movie name" required>
            <button type="submit">Search</button>
        </div>
    </form>

    <div class="center onett" style="display: none;">
        <div class="loader"></div>
    </div>

    <div class="movies" id="moviesContainer"></div>
    <p id="noMoviesMessage" style="text-align: center; width: 100%; color: white; display: none;">No movies found, please try to search.</p>

    <script>

const urlParams = new URLSearchParams(window.location.search);
const movieNameParam = urlParams.get('name');

      
                fetchMovies(movieNameParam);
            
async function fetchMovies(name) {
    const loader = document.querySelector('.onett');
    const moviesContainer = document.getElementById('moviesContainer');
    const noMoviesMessage = document.getElementById('noMoviesMessage');
    
    loader.style.display = 'flex';
    moviesContainer.innerHTML = '';
    noMoviesMessage.style.display = 'none';
    
    let attempts = 0;
    const maxAttempts = 3;

    while (attempts < maxAttempts) {
        try {
            const response = await fetch(`/search?name=${name}`);
            const data = await response.json();

            if (data.movies && data.movies.length > 0) {
                data.movies.forEach(movie => {
                    const movieCard = document.createElement('a');
                    movieCard.href = `/downlaodmovies/?link=${movie.link}`;
                    movieCard.innerHTML = `
                        <div class="movie-card">
                            <div class="shdow"></div>
                            <div class="img">
                                <img src="${movie.thumbnail}" alt="${movie.title}">
                            </div>
                            <h2>${movie.title}</h2>
                            <p>Views: ${movie.views}</p>
                        </div>
                    `;
                    moviesContainer.appendChild(movieCard);
                });
                // If successful, break out of the retry loop
                break;
            } else {
                noMoviesMessage.style.display = 'block';
                // Break out of retry loop as there are no movies to display
                break;
            }
        } catch (error) {
            console.error(`Attempt ${attempts + 1} failed to fetch movies:`, error);
            attempts++;
            // Wait for a moment before retrying (optional)
            await new Promise(resolve => setTimeout(resolve, 1000)); // 1 second delay
        } finally {
            loader.style.display = 'none';
        }
    }

    if (attempts === maxAttempts) {
        console.error(`Failed to fetch movies after ${maxAttempts} attempts.`);
        // Optionally, display an error message or handle the failure
    }
}
    

    </script>
</body>

