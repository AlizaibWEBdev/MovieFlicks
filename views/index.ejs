            <script>

                 
  document.addEventListener('DOMContentLoaded', function() {
    // Delayed popup display
    setTimeout(function() {
        var popupBackground = document.getElementById('popup-background');
        var messageBox = document.getElementById('message-box');
        
        popupBackground.style.display = 'block';
        messageBox.style.display = 'block';

        // Event listeners for buttons
        var yesButton = document.getElementById('yes-button');
        var noButton = document.getElementById('no-button');
        var closeButton = document.getElementById('close-button');

        yesButton.addEventListener('click', function() {
            window.location.href = 'https://mood2movies.vercel.app/';
        });

        noButton.addEventListener('click', function() {
            popupBackground.style.display = 'none';
            messageBox.style.display = 'none';
        });

        closeButton.addEventListener('click', function() {
            popupBackground.style.display = 'none';
            messageBox.style.display = 'none';
        });

    }, 2000); // 4000 milliseconds = 4 seconds delay
});



                function handleIt(event) {
                    event.preventDefault(); // Prevent the form from submitting immediately
                    document.getElementsByClassName("onett")[0].style.display = "flex";
                    setTimeout(() => {
                        document.getElementsByTagName("form")[0].submit();
                    }, 200);
                }

                let pages = document.querySelectorAll("#pages a");
                let moviesContainer = document.getElementById("moviesContainer");

                for (const iterator of pages) {
                    iterator.addEventListener("click", async (e) => {
                        document.getElementsByClassName("onett")[0].style.display = "flex";
                        e.preventDefault();
                        try {
                            const response = await fetch(`https://movieflicks-one.vercel.app/pages?id=${e.target.innerText}`);
                            const data = await response.json();
                            let movies = data.movies;

                            moviesContainer.innerHTML = "";
                            movies.forEach((movie) => {
                                moviesContainer.innerHTML += `
                    <a href="/downlaodmovies/?link=${movie.link}">
                        <div class="movie-card">
                            <div class="shdow"></div>
                            <div class="img">
                                <img src="${movie.thumbnail}" alt="${movie.title}">
                            </div>
                            <h2>${movie.title}</h2>
                            <p>Views: ${movie.views}</p>
                        </div>
                    </a>
                `;
                                window.scrollTo({
                                    top: 650,
                                    behavior: 'smooth'
                                });
                            });
                            document.getElementsByClassName("onett")[0].style.display = "none";
                        } catch (error) {
                            console.error("Error fetching movies:", error);
                        }
                    });
                }

            </script>
