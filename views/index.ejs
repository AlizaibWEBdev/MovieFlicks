<style>
    .loader {
        width: 50px;
        aspect-ratio: 1;
        border-radius: 50%;
        border: 8px solid #0000;
        border-right-color: #ffa50097;
        position: relative;
        animation: l24 1s infinite linear;

    }

    .loader:before,
    .loader:after {
        content: "";
        position: absolute;
        inset: -8px;
        border-radius: 50%;
        border: inherit;
        animation: inherit;
        animation-duration: 2s;
    }

    .loader:after {
        animation-duration: 4s;
    }

    @keyframes l24 {
        100% {
            transform: rotate(1turn)
        }
    }

    body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        margin: 0;
        padding: 0;
        overflow-x: hidden;

        text-decoration: none;

        box-sizing: border-box;
        font-size: 20px;
        background-color: #0b0f18;

    }


    h1 {
        text-align: center;
        font-size: 2vmax;
        color: white;

    }

    input {
        width: 50vw;
        padding: 14px;
        outline: none;
        border: 1px solid #1d75b9;
        font-size: 20px;
        background-color: #e8f0fe;
        border-radius: 20px 0px 0px 20px;
        transform: translateX(10px);

    }



    form button {
        padding: 13px;
        border-radius: 0px 20px 20px 0px;
        background-color: #e8f0fe;
        color: white;
        border: none;
        width: fit-content;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        cursor: pointer;

        border-left: none;
        border: 1px solid #1d75b9;
        outline: none;
    }

    form {
        margin-bottom: 20px;
    }

    .movies {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        flex-direction: row;
    }

    .movie-card {

        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding: 10px;
        width: calc(100vw/4);
        min-width: 300px;
        margin: auto;
        padding-top: 20px;
        text-align: start;
        background: #040609;
        border: 1px solid #007bff59;
        margin: 5px;
        border-radius: 10px;


    }

    .movie-card h2,
    p {
        font-weight: 400;
        font-size: 18px !important;
        width: 200px;

    }

    .movie-card h2,
    p {
        transform: translateX(5px);
    }

    @media only screen and (max-width:500px) {
        .movie-card {
            width: 80vw !important;
        }
    }

    a {
        text-decoration: none;
        color: rgb(255, 255, 255);
    }

    .movie-card p {
        font-size: 13px !important;

    }

    .movie-card img {

        height: auto;

    }

    .movie-card h2 {
        font-size: 18px;
        margin: 10px 0;
    }

    .movie-card p {
        font-size: 14px;
        margin: 5px 0;
    }


    .center {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        flex-wrap: wrap;
    }

    .onett {
        width: 100vw;
        height: 100vh;
        position: fixed;
        top: 0;
        display: none;
        z-index: 9999;
        background-color: #040609;
    }

    .header {
        padding: 10px;


        display: flex;
        align-items: center;
        color: white;
        font-size: 30px;
        font-weight: 500;
        width: 100vw;
        position: absolute;
        top: 0;

    }

    .header .logo {
        transform: translateX(30px) !important;

        padding: 10px;
        border-radius: 10px;

        cursor: pointer;
    }

    .header .logo span {
        color: transparent;
        background: linear-gradient(45deg, #2ba3ff, darkblue);
        background-clip: text;
        font-size: 40px;
        font-weight: 900;
    }

    .hero {
        width: 100vw;
        align-items: center;
        justify-content: center;
        display: flex;
        flex-direction: column;
        background: url("hero.jpg") rgba(0, 0, 0, 0.6);
        background-blend-mode: darken;
        background-repeat: repeat;

        height: 45vh;
        background-attachment: fixed;
    }

    .hero p {
        color: white;
        text-align: center;
        width: 100%;
        font-weight: 700;
        font-size: 25px !important;
    }

    ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
        background-color: #1f2e46;
    }

    ::-webkit-scrollbar-thumb {
        background-color: #1d75b9;
        border-radius: 10px;
    }

    .row {
        display: flex;
        background-color: black;
        padding: 20px;

        grid-area: 10px;
        overflow-x: scroll;
        flex-wrap: nowrap;

    }



    .row .movie-card {
        margin-left: 10px;
        display: flex;
        min-width: 500px !important;
        align-items: center;
        justify-content: center;
        min-height: 320px;
        border: none;
        background-color: #1b243a;
    }

    .row .movie-card h2 {
        font-size: 15px !important;
    }

    .row .movie-card img {
        max-width: 100%;
    }

    @media only screen and (max-width:600px) {
        .row .movie-card {
            min-width: 260px !important;
        }

        .hero p {
            font-size: 20px !important;
            text-align: center;
            width: 90%;
            transform: translateX(-10px);
        }

        .hero .header {
            justify-content: center;
            align-items: center;
        }

        .hero .logo {
            transform: translateX(-10px) !important;
        }
    }

    .hading-sec-2 {
        padding: 10px;
    }

    .hading-sec-2 h3 {
        color: white;

    }

    .hading-sec-2 h3::after {
        content: "";
        display: block;
        margin-top: 8px;
        min-width: 200px;
        border-radius: 10px;
        width: 30%;
        height: 5px;
        background: linear-gradient(45deg, darkblue, #1d75b9);
    }

    .movie-card img {
        width: 150px;
    }


    form button img {

        width: 25px;

    }

    .pagination {
        position: relative;
        height: 60px;
        background: rgba(255, 255, 255, 0.05);
        box-shadow: 5px 5px 30px rgba(0, 0, 0, 0.3);
        display: flex;
        width: 100vw;
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(3px);
        border-radius: 2px;
    }

    .pagination li {
        list-style-type: none;
        display: inline-block;
    }

    .pagination li a {
        position: relative;
        padding: 20px;
        font-size: 17px;
        text-decoration: none;
        color: #fff;
        font-weight: 500;
    }

    .pagination li a:hover,
    .pagination li.active a {
        background: rgba(255, 255, 255, 0.2);
    }

    footer {
        background: #333;
        color: #fff;
        text-align: center;
        height: 80px;
        width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    footer p {
        margin: 0;
        min-width: 280px;
        text-align: center;
    }

    /* Popup Background */
#popup-background {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 999;
    backdrop-filter: blur(5px); /* Applies blur effect to the background */
}

/* Message Box */
#message-box {
    display: none;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 300px;
    padding: 20px;
    background-color: #ffffff;
    border: 2px solid #007bff;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 1000;
    text-align: center;
}

#message-content {
    margin-bottom: 20px;
}

#message-content p {
    font-size: 18px;
    margin-bottom: 10px;
}

.button-container {
    display: flex;
    justify-content: center;
}

#yes-button, #no-button {
    padding: 10px 20px;
    margin: 0 10px;
    border: none;
    background-color: #007bff;
    color: #fff;
    cursor: pointer;
    border-radius: 5px;
    font-size: 16px;
}

#yes-button:hover, #no-button:hover {
    background-color: #0056b3;
}

#close-button {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 24px;
    cursor: pointer;
    color: #007bff;
}


</style>

<body>
    <div id="popup-background"></div>

    <div id="message-box">
